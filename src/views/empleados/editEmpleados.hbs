<div class="col-md-4 mx-auto mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class="card-body">
            <form action="/empleados/edit-empleado/{{empleados.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Producto"
                    value="{{empleados.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="apellido" class="form-control" placeholder="unidades"
                    value="{{empleados.apellido}}">
                </div>
                <div class="form-group">
                    <input type="number" name="documento" class="form-control" placeholder="Precio unitario"
                    value="{{empleados.documento}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cargo" class="form-control" placeholder="descripcion"
                    value="{{empleados.cargo}}">
                </div>
                <div class="form-group">
                    <input type="number" name="salarioXhora" class="form-control" placeholder="Salario por hora"
                    value="{{empleados.salarioXhora}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>