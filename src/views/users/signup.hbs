<div class="container">
    <div class="row mt-4">
    <div class="col-md-3 mx-auto">
        <div class="card">
            <div class="card-header mx-auto">
                Account Register
            </div>
            <div class="card-body mx-auto">
                <form action="/users/signup" method="POST">
                    <div class="form-group my-1">
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                    </div>
                    <div class="form-group my-1">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group my-1">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                    </div>
                    <div class="form-group my-1">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="{{confirm-password}}">
                    </div>
                    <div class="form-group my-1">
                        <button type="submit" class="btn btn-primary btn-block">
                            SignUp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>


    