<div class="col-md-4 mx-auto mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-producto/{{producto.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="producto" class="form-control" placeholder="Producto"
                    value="{{producto.producto}}">
                </div>
                <div class="form-group">
                    <input type="text" name="categoria" class="form-control" placeholder="Categoria"
                    value="{{producto.categoria}}">
                </div>
                <div class="form-group">
                    <input type="text" name="ubicacion" class="form-control" placeholder="Ubicacion"
                    value="{{producto.ubicacion}}">
                </div>
                <div class="form-group">
                    <input type="number" name="precio" class="form-control" placeholder="Precio"
                    value="{{producto.precio}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>