<div class="container mt-5">
    <div class="row">
        
        
        
        <div class="col-lg-8 offset-lg-2">
            <div class="card">
                <div class="card-body text-center">
                    <span><h1>LISTADO DE EMPLEADOS</h1></span>
                    <a href="/empleados/agregarempleados"> Nuevooo</a>
                    
                    <table class="table table-striped mt-4">
                        
  <thead>
      
    <tr>
      <th scope="col">Nombres</th>
      <th scope="col">documento</th>
      <th scope="col">Cargo</th>
      <th scope="col">salarioXhora</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      {{#each empleados}}
    <tr>
      <th>{{nombre}} {{apellido}}</th>
      <td>{{documento}}</td>
      <td>{{cargo}}</td>
      <td>{{salarioXhora}}</td>

      <td> 
        <form action="/empleados/delete/{{_id}}?_method=DELETE" method="POST">
      <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger btn-block btn-sm" type="submit">
          Delete </button>
      </form>
      
      <a href="/empleados/edit/{{_id}}"><i class="fa-solid fa-pen-to-square text-primary"></i></a>
      </td>
    </tr>
    
    {{/each}}
  </tbody>
  
</table>
                </div>
            </div>
        </div>
        
    </div>
</div>